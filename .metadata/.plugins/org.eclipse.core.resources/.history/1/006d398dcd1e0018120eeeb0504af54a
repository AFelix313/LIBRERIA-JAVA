	public void insertBook() {
		
		
		b = new Book();
		System.out.println("Inserisci BookId:");
		b.setBookld(input.nextInt());
		System.out.println("Inserisci Title:");
		b.setTitle(input.next());
		System.out.println("Inserisci Casa di Pubblicazione:");
